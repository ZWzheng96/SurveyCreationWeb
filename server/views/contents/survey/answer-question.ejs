<div class="container">
    <form method="POST">
        <div class="row">
            <div class="col-lg-3 col-md-1 col-sm-12"></div>
            <div class="col-lg-6 col-md-10 col-sm-12">

                <div class="jumbotron bg-light mt-5 p-5 text-center">
                    <h6> Question </h6>
                    <!-- Question Goes Here -->
                    <h1 class="display-6"> <%= item.question %>  </h1>
                    <hr>
                    
                        <% for( let i = 0; i < item.options.length; i++ ) { %>
                        
                        <div class="d-grid gap-2 my-2">
                            <a href="/survey/take/<%= surveyid %>/question/<%= item._id %>/<%= item.options[i]._id %>" 
                                 class="btn btn-outline-secondary"> <%= item.options[i].optionText %> </a>
                            </div>
                       
                       <% } %>
                </div>
             </div>
            <div class="col-lg-3 col-md-1 col-sm-12"></div>
        </div>
    </form>
</div>